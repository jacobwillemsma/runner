{
  "name": "runner",
  "version": "1.0.0",
  "description": "Mac menu bar application for running custom functions and scheduled tasks",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "node scripts/build.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": ["electron", "menubar", "mac", "scheduler", "automation"],
  "author": "Jacob Willemsma",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-cron": "^3.0.3"
  },
  "build": {
    "appId": "com.runner.app",
    "productName": "Runner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "functions/**/*",
      "shared/**/*",
      "data/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "target": "dmg",
      "extendInfo": {
        "LSUIElement": true,
        "NSMicrophoneUsageDescription": "Runner may need microphone access for certain functions",
        "NSCameraUsageDescription": "Runner may need camera access for certain functions",
        "com.apple.security.device.audio-input": true,
        "com.apple.security.device.camera": true
      }
    },
    "dmg": {
      "title": "Runner",
      "icon": "assets/icon.icns"
    }
  }
}